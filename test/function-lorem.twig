{% include 'test/styles.css.twig' with {tags:1} %}

<h1>Twig function: <code>lorem</code></h1>

<h2><code>lorem()</code></h2>
<p>Default: one to seven words.</p>
<blockquote>
{{ lorem() }}
</blockquote>

<h2><code>lorem('15 words')</code></h2>
<p>Outpout 15 words.</p>
<blockquote>
{{ lorem('15 words') }}
</blockquote>

<h2><code>lorem('[9w]')|join(', ')</code></h2>
<p>Outpout 5 to 9 words joined with commas.</p>
<blockquote>
    {{ lorem('[5-9w]')|join(', ') }}
</blockquote>

<h2><code>lorem('1-5 sentences')</code></h2>
<p>Output between 1 and 5 sentences.</p>
<blockquote>
{{ lorem('1-5 sentences') }}
</blockquote>

<h2><code>lorem('2 paragraphs', 'p') | raw</code></h2>
<p>Get 2 paragraphs, each wrapped in a <code>&lt;p></code> tag.</p>
<blockquote>
{{ lorem('2 paragraphs', 'p') | raw }}
</blockquote>

<h2><code>{% verbatim %}{% for x in lorem('[5s]') %}<br>
&lt;li>{{ x }}&lt;/li><br>
{% endfor %}{% endverbatim %}</code></h2>
<p>Wrap the command in brackets to get and array.</p>
<blockquote>
<ul>
{% for x in lorem('[5s]') %}
    <li>{{ x }}</li>
{% endfor %}
</ul>
</blockquote>
